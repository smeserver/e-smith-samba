-package esmith;
-
-use strict;
-use Errno;
-use esmith::config;
-use esmith::util;
-use esmith::db;
-
-my %conf;
-tie %conf, 'esmith::config';
-
-#--------------
-# Restart samba
-#--------------
-
-my $status = db_get_prop(\%conf, "smb", "status") || "disabled";
-
-my $action = ($status eq "enabled") ? "restart" : "stop";
